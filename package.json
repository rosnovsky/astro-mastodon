{
  "name": "astro-mastodon",
  "version": "0.0.0",
  "description": "🐘 🚀 Mastodon embeds and mentions for Astro websites",
  "main": "index.js",
  "engines": {
    "node": ">=20.5.1"
  },
  "scripts": {
    "build": "echo \"Warning: no build specified\" && exit 0",
    "commit": "cz",
    "release": "standard-version",
    "prepare": "husky install",
    "test": "NODE_ENV=\"test\" node --no-warnings --require \"ts-node/register\" --test **/**/*.test.ts"
  },
  "keywords": [
    "mastodon",
    "activitypub",
    "astro",
    "embeds",
    "mentions"
  ],
  "author": "Art Rosnovsky <art@rosnovsky.us>",
  "license": "MIT",
  "private": true,
  "repository": {
    "url": "git@github.com:rosnovsky/astro-mastodon.git",
    "type": "git"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.11.19",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "3.1.0",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}

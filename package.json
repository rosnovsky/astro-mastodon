{
  "name": "astro-mastodon",
  "version": "0.3.1",
  "description": "ðŸ˜ðŸš€ Mastodon embeds and mentions for Astro websites",
  "main": "./dist/index.js",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/**/*.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/**/*.d.ts"
    },
    "./dist/output.css": {
      "import": "./dist/output.css"
    }
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=20.5.1"
  },
  "scripts": {
    "build:prod": "rm -rf ./dist && npx tailwindcss -i ./src/global.css -o ./dist/output.css  && tsc",
    "build:dev": "npx tailwindcss -i ./src/global.dev.css -o ./dist/output.dev.css -w && tsc -w",
    "dev": "concurrently \"npx tailwindcss -i ./src/global.dev.css -o ./dist/output.dev.css -w\" \"tsc -w\" \"astro dev --host\"",
    "dev:astro": "astro dev --host",
    "commit": "cz",
    "release": "standard-version",
    "prepare": "husky install",
    "test": "NODE_ENV=\"test\" node --no-warnings --require \"ts-node/register\" --loader=\"ts-node/esm\" --test **/**/*.test.ts"
  },
  "keywords": [
    "mastodon",
    "activitypub",
    "astro",
    "embeds",
    "mentions",
    "withastro",
    "remark",
    "remark-plugin",
    "astro-integration"
  ],
  "author": "Art Rosnovsky <art@rosnovsky.us>",
  "license": "MIT",
  "repository": {
    "url": "git+ssh://git@github.com/rosnovsky/astro-mastodon.git",
    "type": "git"
  },
  "devDependencies": {
    "@astrojs/check": "^0.5.6",
    "@astrojs/react": "^3.0.10",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@headlessui/react": "^1.7.18",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/sanitize-html": "^2.11.0",
    "astro": "^4.4.8",
    "astro-mastodon": "link:./",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "fast-glob": "^3.3.2",
    "isomorphic-dompurify": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unist-util-visit": "^5.0.0"
  },
  "peerDependencies": {
    "astro": "^4.0.0"
  }
}

{
  "name": "astro-mastodon",
  "version": "0.0.0",
  "description": "🐘 🚀 Mastodon embeds and mentions for Astro websites",
  "main": "index.js",
  "type": "module",
  "module": "dist/MastodonEmbed.js",
  "types": "dist/generateMastodonEmbed.d.ts",
  "exports": {
    ".": {
      "import": "./dist/MastodonEmbed.js",
      "require": "./dist/MastodonEmbed.js"
    }
  },
  "engines": {
    "node": ">=20.5.1"
  },
  "scripts": {
    "build": "npx tailwindcss -i ./src/global.css -o ./src/output.css && tsc",
    "commit": "cz",
    "release": "standard-version",
    "prepare": "husky install",
    "test": "NODE_ENV=\"test\" node --no-warnings --require \"ts-node/register\" --test **/**/*.test.ts"
  },
  "keywords": [
    "mastodon",
    "activitypub",
    "astro",
    "embeds",
    "mentions"
  ],
  "author": "Art Rosnovsky <art@rosnovsky.us>",
  "license": "MIT",
  "private": true,
  "repository": {
    "url": "git@github.com:rosnovsky/astro-mastodon.git",
    "type": "git"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@mdx-js/mdx": "^3.0.1",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "3.1.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.334.0",
    "preact": "^10.19.5",
    "react": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  }
}

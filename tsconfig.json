{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "react"],
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules"],
  "paths": {
    "@/*": ["src/*"]
  }
}
